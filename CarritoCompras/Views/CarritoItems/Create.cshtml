@model CarritoCompras.Models.CarritoItem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carrito</h1>

<h4>Agregar producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="CarritoId" class="control-label"></label>
                <input asp-for="CarritoId" class="form-control" value=@ViewData["CarritoId"]/>
                <span asp-validation-for="CarritoId" class="text-danger"></span>
            </div>
            <div class="form-group d-none ">
                <label asp-for="ProductoId" class="control-label"></label>
                <input asp-for="ProductoId" class="form-control" value=@ViewData["ProductoId"] />
                <span asp-validation-for="ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MostrarProductosPorCategoria" asp-controller="Productos" asp-route-id=@ViewData["categoriaId"] >Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
