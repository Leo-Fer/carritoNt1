@model IEnumerable<CarritoCompras.Models.Categoria>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Tienda Carrito Libre</h1>
    <hr />
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://sitontop.com.ar/wp-content/uploads/2018/05/banner-sitontop-hotsale.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://celadasa.vteximg.com.br/arquivos/ids/169690/banner-home-TOP-kieword-PUMA-pearl-pack-ON.jpg?v=637372606457030000" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://celadasa.vteximg.com.br/arquivos/ids/168095/BANNERS-TOP-IN-zapatillas.jpg?v=637562650470200000" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
